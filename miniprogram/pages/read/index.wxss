

.item { 
    margin-bottom: 40rpx;
    padding: 20rpx;
    border-radius: 6rpx;
    position: relative;
    box-shadow: -2px -2px 5px white, 3px 3px 5px rgba(51, 51, 51, 0.1);
 }

.tag {
    position: absolute;
    right: 0;
    top: 0;
    padding: 6rpx;

}
.tag_txt {
    font-size: 24rpx;
    display: block;
    height: 1.2;
}
 
 .title {
    margin-bottom: 10rpx;
 }
 .title_txt {
     font-size: 32rpx;
     color: #333;
     line-height: 1.2;
 }
 
 .author_txt {
     font-size: 28rpx;
     color: #999;
 }
 
 .btm {
     display: flex;
     flex-direction: row;
     justify-content: space-between;
     align-items: center;
 }
 
 .time_txt {
     font-size: 24rpx;
     color: #bbb;
     line-height: 1.2;
 }
 
 .liked {
     width: 32rpx;
     height: 32rpx;
     background: url(data:image/png;base64,) center / 32rpx no-repeat;
   }
  
