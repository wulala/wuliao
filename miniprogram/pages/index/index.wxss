
page {
    height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column; 
  justify-content: center; 
  box-sizing: border-box;
  background: #f5f5f5;
}

.add_container {
    position: fixed;
    right: 7pt;
    top: 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 0 0 12rpx;
    border-radius: 4rpx;
    background: rgb(229 246 253) url(data:image/png;base64,) 8rpx / 30rpx no-repeat;
    padding-left: 44rpx;
  }
  
  .add:before {
    position: absolute;
    top: -20rpx;
    right: 43pt;
    content: '';
    border-right: 10rpx transparent dashed;
    border-left: 10rpx transparent dashed;
    border-top: 10rpx transparent dashed;
    border-bottom: 10rpx rgb(229 246 253) solid;
   }
  
   .add_hide {
     width: 48rpx;
     height: 48rpx;
    background: url(data:image/png;base64,) center / 20rpx no-repeat;
    margin-left: 10rpx;
    border-left: 1rpx solid #fff;
   }
  
  .add_txt {
    font-size: 24rpx;
    line-height: 2; 
    display: block;
    color: #666;
  }

.item {
    position: relative; 
    margin-bottom: 80rpx;
    width: 100%;
    height: 25%;
    box-sizing: border-box;
    border-radius: 6rpx;
    box-shadow: -2px -2px 5px white, 3px 3px 5px rgba(51, 51, 51, 0.1);
}
.item_bg {
    position: absolute;
    left: 0;
    top: 0;
}
.bg_pic {
    width: 100%;
    height: 100%;
}

.item_content {
    position: relative;
    z-index: 2;
    padding: 40rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    
}
 
.content_txt {
    font-size: 36rpx;
    /* color:rgb(3, 169, 243); */
    /* color: white;  */
    color: #666;
    text-shadow: 1px 1px 1px white;

}

.tag {
    position: absolute;
    bottom: 0;
    right: 0;
    padding: 10rpx;
    border-radius: 6rpx;
    box-shadow: -2px -2px 5px white ;
}
.tag_txt {
    font-size: 24rpx;
    color:#ccc;
    display: block;
    line-height: 1.2;
}