 
  .title {
    margin: 160rpx 0;
  }
  
  .title_txt {
    font-size: 52rpx;
    font-style: italic;
    color: rgb(3,169,243);
    border-bottom: 1px solid rgb(3,169,243);
  }
  
  
  .content_txt {
    font-size: 36rpx;
    line-height: 1.8;
    color: #333;
    font-weight: 300;
    width: 100%;
    display: inline-block;
    vertical-align: middle;
    text-align: justify;
  }
  
  
  .author {
    margin: 60rpx 0;
  }
  .author_txt {
    font-size: 28rpx;
    font-weight: 300;
    color: #999;
  }
  
  .done {
    border-left: 6rpx solid  rgba(3,169,243, 0.2);
    background-color: rgba(3,169,243, 0.05);
    padding: 16rpx 12rpx;
  }
  .done_txt {
    font-size: 28rpx;
    line-height: 1.2;
    color: #999;
    display: block;
  }
  
  
  .btns {
    border-top: 1rpx solid #e6e6e6;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 40rpx 0;
  }
  
  .more {
    width: 88rpx;
    height: 88rpx;
    background: url(data:image/png;base64,) center / 50rpx no-repeat;
  }
  .more_url {
    display: block;
    width: 100%;
    height: 100%;
  }
  
  
  
  .share_btn {
    width: 88rpx !important;
    height: 88rpx; 
    display: inline-block;
    vertical-align: middle;
    border: none;
    background: transparent;
  }
  
  .today {
    text-align: center;
    padding: 20rpx 0;
  }
  .today_txt {
    background: url(data:image/png;base64,) left / 34rpx no-repeat;
    font-size: 28rpx;
    line-height: 1.2;
    padding-left: 40rpx;
    color: rgb(3,169,243);
  }