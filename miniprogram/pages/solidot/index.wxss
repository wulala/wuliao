/* miniprogram/pages/news/index.wxss */

.time {
    margin: 40rpx;
    top: 0;
    position: sticky;
     
}
.time_text {
    font-size: 24rpx;
    line-height: 1.6;
    position: relative;
    background-color:  rgb(3, 169, 243);
    color: #fff;
    border-radius: 2px;
    padding: 6rpx 20rpx;
    
}
 
.item {
    padding: 40rpx;
    padding-right: 80rpx;
    margin: 40rpx;
    border-radius: 3px;
    background: #fff url(data:image/png;base64,) 96% center / 16px no-repeat;
}

.item_text {
    /* font-weight: 500; */
    line-height: 1.6;
}

.item_time {
    font-size: 24rpx;
    margin-top: 20rpx;
    color: #999;
}

.pop_detail { 
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    box-sizing: border-box;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    animation: zoomIn 0.2s ease 0s 1 both;
    padding-bottom: env(safe-area-inset-bottom);
}
 
.pop_container {
    flex: 1;    
    display: flex; 
    justify-content: center;
    flex-direction: column;
  
}

.pop_content {
    overflow-y: auto;
    padding: 0 60rpx;
    padding-bottom: 30rpx;      
}
.pop_text {
    font-size: 34rpx;
    line-height: 1.8;
}

.pop_bottom {
    display: flex;
    justify-content: center;
    border-top: 0.5px solid #eee;
}
.pop_title {
    margin-bottom: 30rpx;
    color: rgb(3, 169, 243);
    font-size: 28rpx;  
    padding: 0 60rpx;   
}

.pop_time {
    margin-top: 30rpx;
    color: #999;
    font-size: 24rpx;  

}
 

.btn {
    padding: 0 30rpx;
    width: 100%;
}
.pop_top {
    padding: 40rpx;
    padding-left: 40rpx;
}
.pop_close {
    display: inline-block;
    vertical-align: middle;
    height: 88rpx; 
    width: 88rpx;
    line-height: 78rpx;
    background: url(data:image/png;base64,) left / 32px no-repeat;
}


.add_container {    
    margin-left: -20rpx;
    vertical-align: middle; 
    display: inline-flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 0 0 12rpx;
    border-radius: 4rpx;
    background: rgb(229,246,253); 
}

.add {
    position: relative;
}
  
.add:before {
    position: absolute;
    top: 15rpx;
    left: -30rpx;
    content: '';
    border-left: 10rpx transparent dashed;
    border-bottom: 10rpx transparent dashed;
    border-top: 10rpx transparent dashed;
    border-right: 10rpx rgb(229,246,253) solid;
}

.add_hide {
    width: 48rpx;
    height: 48rpx;
    background: url(data:image/png;base64,) center / 20rpx no-repeat;
    margin-left: 10rpx;
    border-left: 1rpx solid #fff;
}

.add_txt {
    font-size: 24rpx;
    line-height: 2; 
    display: block;
    color: #666;
}


@keyframes zoomIn {
    from {
      opacity: 0;
      transform: scale3d(0.3, 0.3, 0.3);
    }
  
    50% {
      opacity: 1;
    }
}